{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/competences.css">
{% endblock %}

{% block body %}
    <h2> Mes comp√©tences </h2>
    {% for competence in competences %}
        <h6> {{ competence.nom }} </h6>
        <div class="progress">
            <div class="{{ cycle(['progress-bar progress-bar-striped progress-bar-animated','progress-bar bg-success progress-bar-striped progress-bar-animated','progress-bar bg-info progress-bar-striped progress-bar-animated', 'progress-bar bg-warning progress-bar-striped progress-bar-animated', 'progress-bar bg-danger progress-bar-striped progress-bar-animated'], loop.index0)}}" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: {{ competence.value }}%"></div>
        </div>
        <div id="description">
            {{ competence.description }}
        </div>
    {% endfor %}
{% endblock %}