{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/connection.css">
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}
    <form method="post" action="{{ path('connection') }}">
        <fieldset>
            <legend>Formulaire de connexion</legend>
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" name="_username" class="form-control" id="login" aria-describedby="loginHelp" placeholder="Login" value="{{ last_username }}" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="_password" class="form-control" id="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </fieldset>
    </form>
{% endblock %}